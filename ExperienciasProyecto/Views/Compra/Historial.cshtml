@model IEnumerable<ExperienciasProyecto.Models.HistorialCompra>

@{
    ViewBag.Title = "Historial de Compras";
}

<!-- Estilos Steam -->
<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        color: #00adee;
        margin-top: 30px;
        margin-bottom: 20px;
        text-align: center;
    }

    table {
        background-color: #1e1e1e;
        color: white;
    }

    thead {
        background-color: #2c2c2c;
    }

    th, td {
        vertical-align: middle;
        text-align: center;
    }

    img.miniatura {
        height: 60px;
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #00adee;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0094c6;
        }
</style>

<h2>🧾 Historial de Compras</h2>

<table class="table table-bordered table-striped shadow">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>@Html.DisplayNameFor(model => model.ID_COMPRA)</th>
            <th>@Html.DisplayNameFor(model => model.FECHA)</th>
            <th>@Html.DisplayNameFor(model => model.NOMBRE_JUEGO)</th>
            <th>@Html.DisplayNameFor(model => model.PRECIO_UNITARIO)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.IMAGEN_URL" class="miniatura" alt="@item.NOMBRE_JUEGO" />
                </td>
                <td>@item.ID_COMPRA</td>
                <td>@item.FECHA.ToString("dd/MM/yyyy")</td>
                <td>@item.NOMBRE_JUEGO</td>
                <td>S/. @item.PRECIO_UNITARIO.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-4">
    @Html.ActionLink("← Volver al Catálogo", "Index", "Juego", null, new { @class = "btn btn-primary px-4 py-2" })
</div>

@{
    ViewBag.Title = "Registrar Usuario";
}

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Segoe UI', sans-serif;
    }

    .register-container {
        max-width: 450px;
        margin: 50px auto;
        background-color: #1f1f1f;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0, 173, 238, 0.3);
    }

        .register-container h2 {
            color: #00adee;
            margin-bottom: 30px;
        }

    .form-control {
        background-color: #2a2a2a;
        border: none;
        color: #ffffff;
    }

        .form-control::placeholder {
            color: #888;
        }

    .btn-register {
        background-color: #00adee;
        border: none;
        width: 100%;
    }

        .btn-register:hover {
            background-color: #009ac7;
        }

    .text-success {
        text-align: center;
    }
</style>

<div class="register-container">
    <h2 class="text-center">📝 Crear una Cuenta</h2>

    @using (Html.BeginForm("RegistrarUsu", "Usuario", FormMethod.Post))
    {
        <div class="form-group mb-3">
            <label>Nombre:</label>
            <input type="text" name="NOMBRE" class="form-control" placeholder="Ingrese su nombre" required />
        </div>
        <div class="form-group mb-3">
            <label>Correo:</label>
            <input type="email" name="CORREO" class="form-control" placeholder="ejemplo@correo.com" required />
        </div>
        <div class="form-group mb-4">
            <label>Contraseña:</label>
            <input type="password" name="CONTRASENA" class="form-control" placeholder="Mínimo 6 caracteres" required />
        </div>
        <button type="submit" class="btn btn-register btn-lg">Registrar</button>
    }

    @if (ViewBag.Mensaje != null)
    {
        <p class="text-success mt-3">@ViewBag.Mensaje</p>
    }

    <p class="text-center mt-3">
        ¿Ya tienes una cuenta?
        @Html.ActionLink("Inicia sesión aquí", "Login", "Usuario", new { }, new { @class = "text-info" })
    </p>
</div>
